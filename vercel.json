{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://signature-drapes-backend.vercel.app/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
